# ============================================
# NewsAgent - Environment Variables
# ============================================
# Скопируйте этот файл в .env и заполните значения
# cp .env.example .env

# ============================================
# Bot (newsagent) - Telegram Bot Configuration
# ============================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Получите Chat ID у @userinfobot в Telegram
TELEGRAM_CHAT_ID=your_chat_id_here

# Порт для метрик Prometheus (по умолчанию 8000)
METRICS_PORT=8000

# ============================================
# Parser - News Parser Configuration
# ============================================
# Интервал парсинга в секундах (по умолчанию 300 = 5 минут)
PARSER_INTERVAL=300

# ============================================
# Database - Shared Database Configuration
# ============================================
# URL подключения к базе данных (если используется)
# Пример: postgresql://user:password@localhost:5432/newsagent
DATABASE_URL=

# ============================================
# Grafana Alloy - Metrics Collection
# ============================================
# URL для отправки метрик в Grafana Cloud
# Получите в Grafana Cloud: https://grafana.com/orgs/YOUR_ORG/settings/apikeys
GCLOUD_HOSTED_METRICS_URL=

# Instance ID для метрик в Grafana Cloud
GCLOUD_HOSTED_METRICS_ID=

# API ключ для записи метрик (Remote Write API Key)
GCLOUD_RW_API_KEY=
